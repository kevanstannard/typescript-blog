    // "esModuleInterop": true,
    // "moduleResolution": "node",
    // "skipLibCheck": true,
    // "noUnusedLocals": false,
    // "noUnusedParameters": true,
    // "noImplicitReturns": true,
    // "allowJs": true
  }
}
