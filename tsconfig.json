{
  "include": ["src", "code"],
  "exclude": ["node_modules", "lib"],
  "compilerOptions": {
    "rootDir": ".",
    "noEmit": true,
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "moduleDetection": "force",
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noImplicitReturns": true
  }
}
